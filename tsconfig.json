{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "moduleResolution": "Node",
    "outDir": "./lib",
    "pretty": true,
    "rootDirs": [
      "./src"
    ],
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "@heroku-cli/schema": ["src/index.ts"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
